---
import PrimaryButton from "@components/common/Button/PrimaryButton.astro";
---

<section class="relative pt-24 pb-36 bg-white overflow-hidden" id="contact">
  <img
    class="absolute bottom-0 left-1/2 transform -translate-x-1/2"
    src="/gradient.svg"
    alt=""
  />
  <div class="relative z-10 max-w-7xl px-4 mx-auto">
    <div class="mb-10 md:mx-auto sm:text-center max-w-xl md:mb-12">
      <h2
        class="max-w-lg font-sans text-3xl font-bold leading-none tracking-tight text-black sm:text-4xl md:mx-auto"
      >
        Contact Us
      </h2>
      <p class="text-base text-gray-700 md:text-lg mt-2 mb-4">
        Wanna Grow Your Business Digitally Then Contact Us Today!
      </p>
      <PrimaryButton class="mx-auto" title="Lets Talk!" href="#contact" />
    </div>

    <div class="flex flex-wrap -m-3">
      <div class="w-full md:w-1/3 p-3">
        <div
          class="p-11 h-full text-center bg-white/25 backdrop-blur-sm border border-blueGray-100 rounded-xl shadow-11xl"
        >
          <div class="relative flex items-center justify-center mx-auto">
            <svg
              class="text-purple-100"
              width="66"
              height="68"
              viewBox="0 0 66 68"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M65.5 30C65.5 50.4345 46.4345 68 26 68C5.56546 68 0 50.4345 0 30C0 9.56546 12.5655 0 33 0C53.4345 0 65.5 9.56546 65.5 30Z"
              ></path>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="absolute text-purple-600 w-9 h-9"
              viewBox="0 0 24 24"
              ><g
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                ><path
                  d="M3 7a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                ></path><path d="m3 7l9 6l9-6"></path></g
              ></svg
            >
          </div>
          <h3 class="my-3 text-xl font-bold font-heading leading-snug">
            Send Email
          </h3>
          <a
            href="mailto:dmarketingguru0@gmail.com"
            class="font-medium leading-relaxed hover:underline"
            >dmarketingguru0@gmail.com</a
          >
        </div>
      </div>
      <div class="w-full md:w-1/3 p-3">
        <div
          class="p-11 h-full text-center bg-white/25 backdrop-blur-sm border border-blueGray-100 rounded-xl shadow-11xl"
        >
          <div class="relative flex items-center justify-center mx-auto">
            <svg
              class="text-yellow-100"
              width="78"
              height="78"
              viewBox="0 0 78 78"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M8.49996 28.0002C4.09993 47.9554 14.1313 66.7885 35.5 71.5002C56.8688 76.2119 68.0999 58.4553 72.5 38.5001C76.9 18.5449 68.3688 12.711 47 7.99931C25.6312 3.28759 12.9 8.04499 8.49996 28.0002Z"
              ></path>
            </svg>

            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="absolute text-yellow-500 w-9 h-9"
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M19.95 21q-3.225 0-6.287-1.438t-5.425-3.8q-2.363-2.362-3.8-5.425T3 4.05q0-.45.3-.75t.75-.3H8.1q.35 0 .625.225t.325.575l.65 3.5q.05.35-.013.638T9.4 8.45L7 10.9q1.05 1.8 2.625 3.375T13.1 17l2.35-2.35q.225-.225.588-.337t.712-.063l3.45.7q.35.075.575.338T21 15.9v4.05q0 .45-.3.75t-.75.3Z"
              ></path></svg
            >
          </div>
          <h3 class="my-3 text-xl font-bold font-heading leading-snug">
            Call Us
          </h3>
          <a
            href="tel:639771317"
            class="font-medium leading-relaxed hover:underline">+91 639771317</a
          >
        </div>
      </div>
      <div class="w-full md:w-1/3 p-3">
        <div
          class="p-11 h-full text-center bg-white/25 backdrop-blur-sm border border-blueGray-100 rounded-xl shadow-11xl"
        >
          <div class="relative flex items-center justify-center mx-auto">
            <svg
              class="text-rose-100"
              width="72"
              height="75"
              viewBox="0 0 72 75"
              fill="currentColor"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M63.6911 28.8569C68.0911 48.8121 74.6037 61.2674 53.2349 65.9792C31.8661 70.6909 11.6224 61.2632 7.22232 41.308C2.82229 21.3528 3.6607 12.3967 25.0295 7.68503C46.3982 2.97331 59.2911 8.90171 63.6911 28.8569Z"
              ></path>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="absolute text-rose-600 w-9 h-9"
              viewBox="0 0 24 24"
              ><path
                fill="currentColor"
                d="M12 11.5A2.5 2.5 0 0 1 9.5 9A2.5 2.5 0 0 1 12 6.5A2.5 2.5 0 0 1 14.5 9a2.5 2.5 0 0 1-2.5 2.5M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7Z"
              ></path></svg
            >
          </div>
          <h3 class="my-3 text-xl font-bold font-heading leading-snug">
            Address
          </h3>
          <p class="font-medium max-w-xs mx-auto leading-relaxed">
            Near Birla farm chowk,<br /> Haripur Kalan, Haridwar,<br /> Uttarakhand
            249411
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
