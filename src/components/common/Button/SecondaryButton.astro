---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}
const { href, title, class: className } = Astro.props;
---

<a
  class:list={[
    className,
    "inline-block rounded-full bg-gradient-to-r from-orange-400 to-orange-600 p-[2px] hover:text-white focus:outline-none focus:ring active:text-opacity-75",
  ]}
  href={href}
>
  <span
    class="block rounded-full bg-white px-8 py-3 text-sm font-medium hover:bg-transparent"
  >
    {title}
  </span>
</a>
